    <style name="MainActivityTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">@color/colorPrimary</item>
        <item name="android:textColor">@color/color_main_text</item>
        <item name="android:radioButtonStyle">@style/MyRadioButton</item>
    </style>

    <style name="MyRadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ActionBarTheme" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/color_main_text</item>
        <item name="colorControlHighlight">@color/color_common_background</item>
        <item name="android:colorBackground">@color/color_white</item>
        <item name="android:textColorHint">@color/color_hint_text</item>
        <!--<item name="selectableItemBackground">?android:selectableItemBackground</item>-->
        <!--<item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>-->
    </style>


    <style name="popup_window_animation">
        <item name="android:windowEnterAnimation">@anim/popup_show_anim</item>
        <item name="android:windowExitAnimation">@anim/popup_exit_anim</item>
    </style>
</resources>
